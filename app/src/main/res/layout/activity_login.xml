<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".login.LoginActivity"
android:background="@drawable/pichangersfondopantallla">

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etPichangers"
        android:text="Pichangers"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="40dp"
        android:textColor="#FFFFFF"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#be000000">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:text="Login"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_weight="1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eteUsuario"
            android:hint="Ingrese su usario"
            android:textColorHint="#FFFFFF"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_weight="1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etePassword"
            android:hint="Ingrese su password"
            android:textColorHint="#FFFFFF"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:password="true"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogin"
            android:text="Ingresar"
            android:textColor="#FFFFFF"
            android:onClick="onButLoginClick"
            android:background="#0fc4dc" />

    </LinearLayout>


</LinearLayout>


</FrameLayout>